{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [ 
      "es6"
    ],
    "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": "src",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "src/*": ["*"],
      "*": [
        "node_modules/*",
        "typings/*"
      ]
    }
  },
  "exclude": [ 
    "node_modules"
  ]
}